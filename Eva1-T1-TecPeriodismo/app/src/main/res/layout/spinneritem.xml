<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:id="@+id/imageciclo"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Large Text"
            android:id="@+id/nameciclo"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageciclo"
            android:layout_toEndOf="@+id/imageciclo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Téc Periodísmo"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal"
            android:layout_alignTop="@+id/nameciclo"
            android:layout_toRightOf="@+id/nameciclo"
            android:layout_toEndOf="@+id/nameciclo"
            android:layout_marginLeft="34dp"
            android:layout_marginStart="34dp" />
    </RelativeLayout>

</LinearLayout>